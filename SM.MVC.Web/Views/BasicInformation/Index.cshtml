@using Domain.Models.Enum
@using Core.Helper
@model IEnumerable<Core.ViewModels.LookupVM>
@{
    ViewData["Title"] = "اطلاعات پایه";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Styles
{

    <!-- JQuery DataTable Css -->
    <link href="~/Admin/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css" rel="stylesheet">

}
<div class="card">
    <div class="header bg-red">
        <h2>
            اطلاعات پایه
        </h2>
    </div>
    <div class="body">
        <a asp-controller="BasicInformation" asp-action="CreateInformation" class="btn bg-green waves-effect">ثبت اطلاعات جدید</a>
        <br />
        <br />

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <div class="table-responsive">
                            <div id="GridView">
                                <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                    <thead>
                                        <tr>
                                            <th class="align-right">گروه</th>
                                            <th class="align-right">عنوان</th>
                                            <th class="align-right">توضیحات</th>
                                            <th class="align-right">کد مرجع</th>
                                            <th class="align-right">تاریخ ثبت</th>
                                            <th class="align-right">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th class="align-right">گروه</th>
                                            <th class="align-right">عنوان</th>
                                            <th class="align-right">توضیحات</th>
                                            <th class="align-right">کد مرجع</th>
                                            <th class="align-right">تاریخ ثبت</th>
                                            <th class="align-right">عملیات</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th class="align-right">@item.Category.ToDescription() </th>
                                                <th class="align-right">@item.Description</th>
                                                <th class="align-right">@item.Information</th>
                                                <th class="align-right">@item.ReferenceID</th>
                                                <th class="align-right">@item.DateInserted.Value.GetPrsianDate()</th>
                                                <th class="align-right">
                                                    <a class="btn bg-amber waves-effect" onclick="DeleteLookup(@item.Id)"> حذف </a>
                                                    <a class="btn bg-light-green waves-effect" onclick="EditLookup(@item.Id)"> ویرایش </a>
                                                </th>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts
{

    <script>
        function DeleteLookup(id) {
            $.ajax({
                url: "@Url.Action("DeleteLookup", "BasicInformation")?LookupId=" + id  ,
                type: "POST",
                success: function (result) {
                    $("#GridView").html(result );

                }
            });
        }

        function EditLookup(id) {
            window.location.href = "@Url.Action("EditLookup", "BasicInformation")?LookupId=" + id;
        }
    </script>


    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>


    <!-- Jquery DataTable Plugin Js -->
    <script src="~/Admin/plugins/jquery-datatable/jquery.dataTables.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/buttons.flash.min.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/jszip.min.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/pdfmake.min.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/vfs_fonts.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/buttons.html5.min.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/buttons.print.min.js"></script>

    <!-- Custom Js -->
    <script src="~/Admin/js/admin.js"></script>
    <script src="~/Admin/js/pages/tables/jquery-datatable.js"></script>


}



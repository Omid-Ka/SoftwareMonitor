@using Core.Helper
@model IEnumerable<Core.DTO.ProjectDTO>
@{
    ViewData["Title"] = "پروژه ها";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles
{

    <!-- JQuery DataTable Css -->
    <link href="~/Admin/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css" rel="stylesheet">

}
<div class="card">
    <div class="header bg-red">
        <h2>
            پروژه ها
        </h2>
    </div>
    <div class="body">
        <a asp-controller="Project" asp-action="CreateProject" class="btn bg-green waves-effect">ثبت پروژه جدید</a>
        <br />
        <br />

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <div class="table-responsive">
                            <div id="GridView">
                                <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                    <thead>
                                        <tr>
                                            <th class="align-right">نام پروژه</th>
                                            <th class="align-right">تاریخ ثبت</th>
                                            <th class="align-right">توضیحات پروژه</th>
                                            <th class="align-right">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th class="align-right">نام پروژه</th>
                                            <th class="align-right">تاریخ ثبت</th>
                                            <th class="align-right">توضیحات پروژه</th>
                                            <th class="align-right">عملیات</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th class="align-right">@item.ProjectName </th>
                                                <th class="align-right">@item.DateInserted.GetPrsianDate()</th>
                                                <th class="align-right">@item.ProjectDescription</th>
                                                <th class="align-right">
                                                    <a class="btn bg-amber waves-effect" onclick="DeleteProject(@item.Id)"> حذف پروژه </a>
                                                    <a class="btn bg-light-green waves-effect" onclick="ٍEditProject(@item.Id)"> ویرایش پروژه </a>
                                                </th>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts
{

    <script>
        function DeleteProject(id) {
            $.ajax({
                url: "@Url.Action("DeleteProject", "Project")?ProjectId=" + id  ,
                type: "POST",
                success: function (result) {
                    $("#GridView").html(result );

                }
            });
        }

        function EditProject(id) {
            window.location.href = "@Url.Action("EditProject", "Project")?ProjectId=" + id;
        }
    </script>

    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>


    <!-- Jquery DataTable Plugin Js -->
    <script src="~/Admin/plugins/jquery-datatable/jquery.dataTables.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/buttons.flash.min.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/jszip.min.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/pdfmake.min.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/vfs_fonts.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/buttons.html5.min.js"></script>
    <script src="~/Admin/plugins/jquery-datatable/extensions/export/buttons.print.min.js"></script>

    <!-- Custom Js -->
    <script src="~/Admin/js/admin.js"></script>
    <script src="~/Admin/js/pages/tables/jquery-datatable.js"></script>

}


<style>
    #container {
        height: 500px;
    }

    .highcharts-figure,
    .highcharts-data-table table {
        min-width: 320px;
        max-width: 700px;
        margin: 1em auto;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #ebebeb;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td,
    .highcharts-data-table th,
    .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr,
    .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }
    
    .Showcenter {
         text-align: center !important;
         /*background-color: aliceblue !important;*/
         font-size: 24px !important;
     }
</style>


<input id="ProjectId" type="hidden" value="@ViewBag.ProjectId" />

<div class="card">
    <div class="header">
        <h2>نمودارها</h2>
    </div>
    <div class="body">

        @if (ViewBag.hasCode == true)
        {

            <div class="row clearfix">
                <div class="Showcenter"> گزارشات بررسی کد</div>
            </div>
            <div class="row clearfix">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <figure class="highcharts-figure">
                        <div id="PieChart"></div>
                    </figure>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <figure class="highcharts-figure">
                        <div id="BarChart"></div>
                    </figure>
                </div>
            </div>
        }
        @if (ViewBag.hasDoc == true)
        {
            <div class="row clearfix">
                <div class="Showcenter"> گزارشات بررسی سند</div>
            </div>
            <div class="row clearfix">
                <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                    <thead style=" background: cornflowerblue;">
                        <tr>
                            <th class="align-right">پارامتر مورد ارزیابی</th>
                            <th class="align-right">وضعیت</th>
                            <th class="align-right">توضیحات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DocReviewList)
                        {
                            <tr>
                                <th class="align-right">@item.DocReviewTitle.ToDescription() </th>
                                <th class="align-right">@item.DocReviewAnswer.ToDescription()</th>
                                <th class="align-right">@item.Description</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        @if (ViewBag.HasLoad == true)
        {
            <div class="row clearfix">
                <div class="center-align"> گزارشات تست بار و فشار</div>
            </div>
            <div class="row clearfix">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <figure class="highcharts-figure">
                        <div id="LoadPieChart"></div>
                    </figure>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <figure class="highcharts-figure">
                        <div id="BarChart"></div>
                    </figure>
                </div>
            </div>
        }
    </div>
</div>

